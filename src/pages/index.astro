---
import Layout from "../layouts/Layout.astro";
import {
  Gauge,
  Rocket,
  Users,
  Wrench,
  MonitorSmartphone,
  Glasses,
  MessageCircleQuestionMark,
  Handshake,
  BadgePercent,
  Waypoints,
  Infinity,
  Youtube,
  ExternalLink,
  Quote,
} from "lucide-preact";
---

<Layout style="scroll-pt-20">
  <section class="relative min-h-screen overflow-hidden" aria-labelledby="hero-title">
    <div class="absolute inset-0 z-0 overflow-hidden">
      <iframe
        class="video-background"
        data-src="https://kinescope.io/embed/kLrnjgBQ27rvKoePRdYv8M?autoplay=1&muted=1&loop=1"
        title="Фоновое видео"
        width="1920"
        height="1080"
        frameborder="0"
        tabindex="-1"
        allow="autoplay; encrypted-media"
        allowfullscreen></iframe>
    </div>
    <div
      class="absolute inset-0 z-10 flex min-h-screen items-center justify-center bg-neutral-900/50"
    >
      <div
        class="container flex flex-col items-center justify-center gap-y-4 py-30 pt-20 xl:gap-y-5"
      >
        <h1 id="hero-title" class="hero-title">Pugovka Booster</h1>
        <p class="hero-subtitle">
          Ускоритель интернета для стабильного доступа к&nbsp;любимым сайтам и&nbsp;сервисам без
          лишних сложностей
        </p>
        <a
          href="https://cabinet.pugovkabooster.com/"
          class="btn-cta group/btn"
          aria-label="Ускорить доступ"
        >
          <span class="btn-cta__icon">
            <Rocket size={24} strokeWidth={2.2} />
          </span>
          <span class="btn-cta__text">Ускорить</span>
        </a>
      </div>
    </div>
  </section>
  <section class="relative overflow-hidden" aria-labelledby="advantages-title" id="advantages">
    <div class="section container">
      <h2 id="advantages-title" class="section-title">
        Наши <span class="text-primary">преимущества</span>
      </h2>
      <div class="grid grid-cols-1 gap-6 pt-6 md:grid-cols-3 xl:pt-8">
        {
          [
            {
              icon: <Wrench size={36} strokeWidth={2} />,
              title: "Быстрая настройка",
              description: "Настройка за пару минут без сложных конфигураций",
            },
            {
              icon: <Users size={36} strokeWidth={2} />,
              title: "Для тебя и твоих близких",
              description: "Один аккаунт для всей семьи - до 10 устройств",
            },
            {
              icon: <Gauge size={36} strokeWidth={2} />,
              title: "Высокая скорость",
              description: "Стабильное соединение без задержек и обрывов",
            },
            {
              icon: <MonitorSmartphone size={36} strokeWidth={2} />,
              title: "Поддерживаются все устройства",
              description: "Работает на компьютерах, телефонах и планшетах",
            },
            {
              icon: <Glasses size={36} strokeWidth={2} />,
              title: "Конфиденциальность",
              description: "Ваши данные защищены современным шифрованием",
            },
            {
              icon: <MessageCircleQuestionMark size={36} strokeWidth={2} />,
              title: "Поддержка",
              description: "Наша команда всегда готова помочь 24/7",
            },
          ].map((item) => (
            <div class="group card-interactive relative p-6">
              <div class="card-overlay group-hover:from-primary/5 group-hover:to-transparent" />
              <div class="relative z-10 flex flex-col">
                <div class="text-primary mb-3 transition-transform duration-300 group-hover:-translate-y-1">
                  {item.icon}
                </div>
                <h3 class="group-hover:text-primary mb-1 text-xl font-bold text-neutral-100 transition-colors duration-300">
                  {item.title}
                </h3>
                <p class="text-sm leading-relaxed text-neutral-400">{item.description}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>
  <section class="bg-dots relative overflow-hidden" aria-labelledby="youtube-title" id="youtube">
    <div class="container flex min-h-screen items-center justify-center py-20">
      <div
        class="group/card card-interactive relative w-full cursor-default bg-neutral-900 p-8 md:max-w-2xl"
      >
        <div class="card-overlay group-hover/card:from-primary/5 group-hover/card:to-transparent">
        </div>
        <div class="relative z-10 flex flex-col items-start gap-6 md:flex-row">
          <div
            class="group-hover/card:border-primary/30 flex h-16 w-16 shrink-0 items-center justify-center rounded-2xl border border-neutral-700/50 transition-all duration-300 group-hover/card:scale-105"
          >
            <img
              class="size-16 rounded-2xl object-cover"
              src="/pugovkin.webp"
              alt="Канал Пуговкина"
              width="64"
              height="64"
              loading="lazy"
              decoding="async"
            />
          </div>
          <div class="flex min-w-0 flex-col gap-2">
            <h3
              id="youtube-title"
              class="group-hover/card:text-primary text-xl font-bold text-neutral-100 transition-colors duration-300"
            >
              Создано при участии команды
            </h3>
            <p class="leading-relaxed text-neutral-400">
              Этот ускоритель интернета создан при участии YouTube-канала
              <a
                class="text-primary focus-ring inline-flex items-center gap-1.5 rounded font-semibold transition-all duration-300 active:opacity-90"
                href="https://www.youtube.com/channel/UCcCD--ZQ7A8qq3SXGX9zAtg"
                target="_blank"
                rel="noopener noreferrer"
              >
                Пуговкина
                <ExternalLink size={16} strokeWidth={2} class="inline opacity-80" />
              </a>. Мы делаем инструменты, которые упрощают доступ к привычным онлайн-сервисам.
            </p>
            <a
              href="https://www.youtube.com/channel/UCcCD--ZQ7A8qq3SXGX9zAtg"
              target="_blank"
              rel="noopener noreferrer"
              class="btn-secondary mt-1 self-start"
              aria-label="Смотреть канал Пуговкина на YouTube"
            >
              <Youtube size={20} strokeWidth={2} aria-hidden="true" />
              Смотреть на YouTube
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section aria-labelledby="tariffs-title" id="tariffs">
    <div class="section container min-h-screen">
      <h2 id="tariffs-title" class="section-title">
        Лучшие <span class="text-primary">тарифы</span>
      </h2>
      <div class="flex flex-col items-center justify-between gap-8 pt-6 md:flex-row xl:pt-8">
        <div class="flex w-full flex-col gap-6">
          {
            [
              {
                title: "Ускоритель интернета",
                description: "Тарифный план для регионов, где не работают любимые сервисы",
                badge: "ПОПУЛЯРНЫЙ",
                devices: "10 Устройств",
                servers: "1 Сервер",
                price: "199.00 ₽",
              },
              {
                title: "Ускоритель чебурнета",
                description: "Тарифный план для регионов, где работают только российские сервисы",
                badge: null,
                devices: "10 Устройств",
                servers: "2 Сервера",
                price: "349.00 ₽",
              },
              {
                title: "Тариф на сутки",
                description: "Если нужно ускорить интернет и чебурнет на денёк",
                badge: null,
                devices: "10 Устройств",
                servers: "2 Сервера",
                price: "30.00 ₽",
              },
            ].map((tariff) => (
              <div class="group card-gradient card-gradient--lift-sm relative p-6">
                {tariff.badge && (
                  <div class="bg-primary absolute -top-3 right-5.5 rounded-full px-3 py-1 text-xs font-bold text-neutral-100">
                    {tariff.badge}
                  </div>
                )}
                <div class="flex flex-col gap-4">
                  <div>
                    <h3 class="mb-2 text-2xl font-bold text-neutral-100">{tariff.title}</h3>
                    <p class="text-neutral-400">{tariff.description}</p>
                  </div>
                  <div class="flex flex-wrap items-center gap-2 text-sm md:gap-3">
                    <div class="flex items-center gap-2 rounded-lg bg-neutral-800/50 px-3 py-1.5">
                      {tariff.title === "Тариф на сутки" ? (
                        <span class="text-primary font-semibold">3 ГБ</span>
                      ) : (
                        <>
                          <Infinity class="size-4 text-neutral-300" />
                          <span class="text-primary font-semibold">Безлимит</span>
                        </>
                      )}
                    </div>
                    <div class="rounded-lg bg-neutral-800/50 px-3 py-1.5">
                      <span class="text-neutral-300">{tariff.devices}</span>
                    </div>
                    <div class="rounded-lg bg-neutral-800/50 px-3 py-1.5">
                      <span class="text-neutral-300">{tariff.servers}</span>
                    </div>
                  </div>
                  <div class="flex items-center justify-between border-t border-neutral-700 pt-4">
                    <div>
                      <p class="text-primary text-3xl font-bold">
                        <span class="text-sm text-neutral-400">от</span>
                        {tariff.price}
                      </p>
                    </div>
                    <a
                      href="https://cabinet.pugovkabooster.com/"
                      class="bg-primary hover:bg-primary/90 active:bg-primary/90 cursor-pointer rounded-lg px-6 py-2 font-semibold text-neutral-100 transition-colors duration-300"
                      aria-label={`Выбрать тариф: ${tariff.title}`}
                    >
                      Выбрать
                    </a>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
        <div class="hidden w-full items-center justify-center md:flex">
          <img
            class="h-auto w-full max-w-[400px] rounded-2xl object-cover"
            src="/miyabi.webp"
            alt="Декор: Miyabi"
            width="400"
            height="300"
            loading="lazy"
            decoding="async"
          />
        </div>
      </div>
    </div>
  </section>
  <section class="bg-grid" aria-labelledby="more-title">
    <div class="section container">
      <h2 id="more-title" class="section-title--center">А еще...</h2>
      <div class="grid grid-cols-1 gap-8 pt-8 md:grid-cols-3">
        {
          [
            {
              icon: <Handshake size={56} strokeWidth={2} />,
              title: "Реферальная программа",
              description: "Приглашайте друзей и получайте бонусы за каждого нового пользователя",
            },
            {
              icon: <BadgePercent size={56} strokeWidth={2} />,
              title: "Программа лояльности",
              description: "Накопительные скидки и специальные предложения для постоянных клиентов",
            },
            {
              icon: <Waypoints size={56} strokeWidth={2} />,
              title: "Быстрое развитие сервиса",
              description: "Мы постоянно улучшаем сервис, добавляем новые функции и серверы",
            },
          ].map((item) => (
            <div class="group card-gradient card-gradient--lift relative p-8">
              <div class="card-overlay group-hover:from-primary/5 group-hover:to-transparent" />
              <div class="relative z-10 flex flex-col items-center gap-4 text-center">
                <div class="text-primary transition-all duration-300 group-hover:scale-110 group-hover:rotate-6">
                  {item.icon}
                </div>
                <h3 class="group-hover:text-primary text-2xl font-bold text-neutral-100 transition-colors duration-300">
                  {item.title}
                </h3>
                <p class="leading-relaxed text-neutral-400">{item.description}</p>
                <div class="bg-primary/50 mt-2 h-1 w-16 transition-all duration-300 group-hover:w-24" />
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>
  <section class="relative overflow-hidden" aria-labelledby="quote-ref">
    <div class="section container flex min-h-screen flex-col justify-center gap-y-12 xl:gap-y-16">
      <div class="group/quote card-interactive relative max-w-4xl cursor-default p-8 md:p-10">
        <div class="card-overlay group-hover/quote:from-primary/5 group-hover/quote:to-transparent">
        </div>
        <div class="relative z-10 flex gap-x-4">
          <Quote
            size={40}
            className="text-primary fill-primary mt-1 shrink-0 rotate-180 transition-transform duration-300 group-hover/quote:scale-110"
          />
          <blockquote
            id="quote-ref"
            class="flex flex-col text-3xl leading-tight font-semibold md:text-5xl"
          >
            Ваше окно в&nbsp;мир должно быть открыто.
            <span class="text-primary">Мы&nbsp;за&nbsp;этим следим.</span>
          </blockquote>
        </div>
      </div>

      <div class="flex flex-col gap-10 md:flex-row md:items-end md:justify-between md:gap-8">
        <div
          class="group/author hover:border-primary/40 hover:shadow-primary/10 active:border-primary/40 active:shadow-primary/10 z-20 flex w-fit items-center gap-4 rounded-2xl border border-neutral-700/50 p-4 transition-all duration-500 hover:-translate-y-1 hover:shadow-xl active:-translate-y-1 active:shadow-xl"
        >
          <img
            class="group-hover/author:ring-primary/40 size-14 rounded-xl object-cover ring-2 ring-neutral-700 transition-all duration-300 md:size-20"
            src="/pugovkin.webp"
            alt="Пуговкин — автор цитаты"
            width="80"
            height="80"
            loading="lazy"
            decoding="async"
          />
          <div>
            <p class="text-sm font-medium text-neutral-400">Говорит</p>
            <p
              class="group-hover/author:text-primary text-2xl font-semibold text-neutral-100 transition-colors duration-300 md:text-3xl"
            >
              Пуговкин
            </p>
          </div>
        </div>

        <div class="relative flex min-h-45 flex-col items-center justify-center md:min-h-55">
          <svg
            class="pointer-events-none absolute inset-0 h-full w-full scale-150 opacity-90 md:scale-[1.8]"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 1160 531.36"
            role="img"
            aria-hidden="true"
          >
            <defs>
              <linearGradient
                id="signature-gradient"
                x1="787.69"
                x2="372.27"
                y1="-162.69"
                y2="693.67"
                gradientUnits="userSpaceOnUse"
              >
                <stop offset="0" stop-color="rgb(15, 23, 42)" stop-opacity="0.6"></stop>
                <stop offset="1" stop-color="rgb(15, 23, 42)" stop-opacity="0.6"></stop>
              </linearGradient>
            </defs>
            <path
              fill="url(#signature-gradient)"
              d="M1130.7981 3.7542C1095.8604 -13.1927 1038.3744 28.5047 984.8987 103.1611C989.6342 53.2581 980.7415 16.7403 956.9908 5.2165C922.0532 -11.7305 864.5625 29.967 811.0841 104.6239C815.8278 54.7204 806.9342 18.2026 783.178 6.6788C748.2422 -10.2682 690.7516 31.4293 637.2741 106.0859C642.0169 56.1827 633.1232 19.665 609.3671 8.1411C574.4322 -8.8058 516.9415 32.8916 463.4631 107.5487C468.2068 57.6449 459.3132 21.1273 435.5571 9.6034C400.6212 -7.3435 343.1315 34.3539 289.6531 109.0106C294.3959 59.1072 285.5022 22.5896 261.7461 11.0657C213.5116 -12.3327 122.3277 94.3528 58.0929 226.7699C-6.1419 359.187 -19.0704 503.8337 29.1645 527.2319C64.0998 544.1795 121.5898 502.4819 175.0682 427.8253C170.3254 477.7282 179.2191 514.2462 202.9752 525.77C237.9101 542.7166 295.4008 501.0191 348.8783 426.3624C344.1355 476.2663 353.0291 512.7833 376.7853 524.3072C411.7211 541.2547 469.2108 499.5571 522.6892 424.9005C517.9455 474.8034 526.8401 511.3214 550.5953 522.8452C585.5311 539.7919 643.0218 498.0943 696.4992 423.4376C691.7565 473.3415 700.6501 509.8585 724.4062 521.3833C759.3411 538.3299 816.8318 496.6323 870.3102 421.9757C865.5665 471.8786 874.4601 508.3966 898.2163 519.9204C946.4554 543.3187 1037.631 436.6335 1101.8715 304.2164C1166.1028 171.7993 1179.0794 27.176 1130.7981 3.7542Z"
            ></path>
          </svg>
          <a
            href="https://cabinet.pugovkabooster.com/"
            class="link-hero-cta relative z-10 px-4 py-6 text-2xl md:text-4xl"
            aria-label="Перейти в кабинет и ускорить интернет"
          >
            Пришло время <span class="text-primary">ускорять</span> твой интернет
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Defer Kinescope iframe: set src after parse to avoid blocking initial render -->
  <script is:inline>
    (function () {
      function loadVideo() {
        var iframe = document.querySelector(".video-background");
        if (iframe && iframe.dataset.src) iframe.src = iframe.dataset.src;
      }
      if (document.readyState === "loading")
        document.addEventListener("DOMContentLoaded", loadVideo);
      else loadVideo();
    })();
  </script>
</Layout>
